<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bid"
        android:src="@mipmap/ic_bid"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_bid"
        android:text="招标"
        android:textSize="11sp"
        android:textColor="@color/green_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/iv_bid"
        app:layout_constraintRight_toRightOf="@id/iv_bid"
        app:layout_constraintTop_toBottomOf="@id/iv_bid"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_title"
        android:text="中山大学节约型校园建设之北校园楼智能电校园楼园..."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="61dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/tv_sort"
        android:text="招标"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="14dp"
        android:background="@drawable/item_text_shape"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/tv_sort_content"
        android:text="工程安装"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="14dp"
        android:background="@drawable/item_text_shape"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/tv_sort"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />
    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="17dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"
        android:src="@mipmap/ic_small_location"/>
    <TextView
        android:id="@+id/tv_location"
        android:text="全国"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_location"
        android:layout_marginLeft="1dp"
        app:layout_constraintTop_toTopOf="@id/iv_location"
        app:layout_constraintBottom_toBottomOf="@id/iv_location"/>
    <ImageView
        android:id="@+id/iv_sort"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="65dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"
        android:src="@mipmap/ic_small_sort"/>
    <TextView
        android:id="@+id/tv_category"
        android:text="工程安装"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_sort"
        android:layout_marginLeft="1dp"
        app:layout_constraintTop_toTopOf="@id/iv_sort"
        app:layout_constraintBottom_toBottomOf="@id/iv_sort" />
    <TextView
        android:text="发布时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_location"
        app:layout_constraintBottom_toBottomOf="@id/iv_location"
        android:layout_marginLeft="246dp"/>
    <TextView
        android:id="@+id/tv_time"
        android:text="2019.1.31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_location"
        app:layout_constraintBottom_toBottomOf="@id/iv_location"
        android:layout_marginRight="18dp"/>





</android.support.constraint.ConstraintLayout>